<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/digitxthour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="150dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/digitxthour"
                android:id="@+id/linear"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txtdate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:background="@drawable/border"
                    android:layout_marginBottom="5dp"
                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/txtdate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:background="@drawable/border"
                    android:layout_marginTop="5dp"
                    android:padding="3dp"/>
            </LinearLayout>
            <AnalogClock
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:hand_minute="@drawable/min"
                android:hand_hour="@drawable/clockneg"
                android:dial="@drawable/dialline"
                android:layout_toRightOf="@+id/linear"
                android:layout_centerVertical="true"
                android:id="@+id/rightanalog"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>